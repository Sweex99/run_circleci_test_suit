<%= form_with url: "/jobs", method: :post do |form| %>  
  <div class='field'>
    <%= form.label :organization_name %>
    <%= form.text_field :organization_name %> <br/>
  </div>
  <div class='field'>
    <%= form.label :project_name %>
    <%= form.text_field :project_name %><br/>
  </div>
  <div class='field'>
    <%= form.label :vcs_slug %>
    <%= form.select :vcs_slug, ['gh', 'bb'] %><br/>
  </div>
  <div class='field'>
    <%= form.label :type_authorization %>
    <%= form.select :type_authorization, ['Circle-Token', 'basic'] %><br/>
  </div>
  <div class='field'>
    <%= form.label :authorization_token %>
     <%= form.text_field :authorization_token %><br/>
  </div>
  <div class='field'>
    <%= form.label 'Перший параметр: ' %>
    <%= form.text_field 'parameters[param_key_1]', placeholder: 'Ключ' %>
    <%= form.text_field 'parameters[param_value_1]', placeholder: 'Значення' %><br/>
  </div>
  <div class='field'>
    <%= form.label 'Другий параметр: ' %>
     <%= form.text_field 'parameters[param_key_2]', placeholder: 'Ключ' %>
     <%= form.text_field 'parameters[param_value_2]', placeholder: 'Значення' %><br/>
  </div>
  <div class='field'>
    <%= form.label 'Третій параметр: ' %>
     <%= form.text_field 'parameters[param_key_3]', placeholder: 'Ключ' %>
     <%= form.text_field 'parameters[param_value_3]', placeholder: 'Значення' %><br/>
  </div>
  <br/>
  
  <%= form.submit "Run" %>  
<% end %>
